        "Authorization",
        "Accept-Language",
        "Accept-Encoding",
        "Access-Control-Request-Headers",
        "Access-Control-Request-Method",
        "Access-Control-Allow-Origin",
        "Access-Control-Allow-Credentials",
        "Origin",
        "Cookie",
        "Content-Type",
        "Cache-Control",
        "Pragma",
        "Host",
        "User-Agent",
        "Connection",
        "Referer",
        "Sec-Fetch-Dest",
        "Sec-Fetch-Mode",
        "Sec-Fetch-Site"
      ],
      "max_age": "12h",
      "debug": true
    }
  },
