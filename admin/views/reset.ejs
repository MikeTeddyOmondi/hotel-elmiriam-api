<div id="user-auth-div" class="row mt-5 ml-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            <h1 class="mb-3"><i class="fa fa-cogs"></i>Reset Password</h1>
            <%- include ('./partials/messages') %>
                <form action="/users/reset/<%= id %>" method="POST">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                </form>
                <p class="mt-4">
                    Remember your password? <a href="/users/login">Login</a>
                </p>
        </div>
    </div>
</div>